{{ ansible_managed | comment }}
client
remote {{ server_name }} 21000
remote {{ server_name }} 21001
remote {{ server_name }} 21002
remote {{ server_name }} 21003
dev tap
proto udp
resolv-retry infinite
nobind
persist-key
persist-tun
ca {{ install_path }}/{{ pv_cert }}
auth-user-pass {{ install_path }}/{{ pv_login }}
ns-cert-type server
comp-lzo
verb 3
log-append /var/log/openvpn.log
